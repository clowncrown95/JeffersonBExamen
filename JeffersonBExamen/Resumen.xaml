<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JeffersonBExamen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Usuario Conectado:" />
                <Label Grid.Row="0" Grid.Column="1"  x:Name="lblUser" />
                <Label Grid.Row="1" Grid.Column="0" Text="Nombre:" />
                <Label Grid.Row="1" Grid.Column="1"  x:Name="lblNombre" />
                <Label Grid.Row="2" Grid.Column="0" Text="Total a Pagar:" />
                <Label Grid.Row="2" Grid.Column="1"  x:Name="lblTotalPaga" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>